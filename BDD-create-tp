create table Domain 
( DomainID int NOT NULL, 
DomainName varchar(200) NOT NULL, 
DomainDescription varchar(600) NOT NULL,
constraint PK_Domain primary key (DomainID)
)
insert into Domain values 
(1 , 'Historique', 'Du sang'), 
(2, 'Policier', 'Meutres'),
(3, 'Fantastique', 'Dragons et elfes')
select * from Domain

create table Person 
(PersonID int NOT NULL, 
[Name] varchar(200) NOT NULL, 
Firstname varchar(200) NOT NULL, 
Email varchar(200) NOT NULL, 
Phone varchar(200) NOT NULL,
constraint PK_Person primary key (PersonID),
)
insert into Person values 
(1 , 'Lilian', 'Roumensg', 'lilian.r@gmail.com', '0948372959'), 
(2, 'Ermane', 'Pourmo', 'armane.p@gmail.com', '0943906712'),
(3, 'Naila', 'Bouarda', 'naila.b@gmail.com', '0409275839')
select * from Person

create table Writter 
( WritterID int NOT NULL, 
PersonID int NOT NULL, 
Grade varchar(280) NOT NULL,
constraint PK_WritterID primary key (WritterID),
constraint FK_Writter_PersonID
         foreign key (PersonID) references Person (PersonID)
)
insert into Writter values 
(1 , 3, 'Grade1'), 
(2, 2, 'Grade2'),
(3, 1, 'Grade3')
select * from Writter

create table Book 
(BookID int NOT NULL, 
DomainID int NOT NULL, 
WritterID int NOT NULL, 
Title varchar(600) NOT NULL,
Color varchar(200), 
pageNumb int, 
Descrip varchar(200) NOT NULL,
constraint PK_Book primary key (BookID),
constraint FK_Book_DomainID
         foreign key (DomainID) references Domain (DomainID),
constraint FK_Book_WritterID
         foreign key (WritterID) references Writter (WritterID)
)
insert into Book values 
(1 , 3, 2, 'Le livre de la jungle', 'vert', 345, 'Histoire dun jeune enfant vivant dans la jungle'), 
(2, 2, 1, 'Au bonheur des dames', 'blanc', 456, 'Monde des grands magasins'),
(3, 1, 3, 'Harry potter 1', 'rouge', 295, 'a lecole des sorciers')
select * from Book

create table Administator (
AdministratorID int NOT NULL, 
PersonID int NOT NULL, 
MdpAdministrator varchar(200) NOT NULL, 
constraint PK_Administrator primary key (AdministratorID),
constraint FK_Person_PersonID
         foreign key (PersonID) references Person (PersonID)
)

insert into Administator values 
(1 , 3, 'mdpfjrbiznfi'), 
(2, 2, 'mdpjhahsjeofe'),
(3, 1, 'mdpjrnznjen')
select * from Administator

create table Reader (
ReaderID int NOT NULL, 
PersonID int NOT NULL, 
MdpReader varchar(200) NOT NULL, 
ReaderAdress varchar(600) NOT NULL,
constraint PK_Reader primary key (ReaderID),
constraint FK_Reader_PersonID
         foreign key (PersonID) references Person (PersonID)
)

insert into Reader values 
(1 , 3, 'mdpjufrbfzbzefjbf', 'jfje.jffj@gmail.fr'), 
(2, 2, 'mdpdejdejdjhdej', 'htm.fr@gmail.fr'),
(3, 1, 'mdpjrnzozdkzjnjen', 'mog.j@gmail.fr')
select * from Reader

create table Borrow (
BorrowID int NOT NULL, 
PersonID int NOT NULL, 
BookID int NOT NULL, 
BorrowDate Date NOT NULL,
ReturnDate Date NOT NULL,
constraint PK_Borrow primary key (BorrowID),
constraint FK_Borrow_PersonID
         foreign key (PersonID) references Person (PersonID),
constraint FK_Borrow_BookID
         foreign key (BookID) references Book (BookID)
)

insert into Borrow values 
(1 , 3, 2, '2023-10-05', '2023-11-10'), 
(2, 2, 1, '2023-01-15', '2023-02-16'),
(3, 1, 3, '2023-07-10', '2023-11-18')
select * from Borrow

